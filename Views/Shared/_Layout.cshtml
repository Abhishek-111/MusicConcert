<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] | Music Concert App</title>

    <environment include="Development">
        <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
        <link href="~/css/Site.css" rel="stylesheet" />
    </environment>

    <environment exclude="Development">
        <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="http://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
              integrity="" crossorigin="anonymous">
    </environment>



</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary bg-light">
            <div class="container">

                <a class="navbar-brand" href="/">
                    <img src="~/images/guiter1.jpg" width="30" height="30" asp-append-version="true" />
                    Music Concert
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @*<li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Signup">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
        </li>*@

                        <li class="nav-item">
                            <partial name="_LoginInfo" />
                        </li>

                        <li class="nav-item">
                            <a class="nav-link active" style="color:blue;font-weight:bold;" aria-current="page" href="#" target="_blank">Help</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer id="footer" class="text-center fixed-bottom">
        <div>
            Copyright &copy; Music Concert Event @DateTime.Now.Year
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
